@model List<Customer>
<h2>All Customers:</h2>

<a asp-controller="Customers" asp-action="AddCustomer"><button>Add Customer</button></a>
<hr>
<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <th>Created At</th>
    </tr>
    @foreach(Customer customer in @Model)
    {
        <tr>
            <td><a href="/customers/@customer.id">@customer.first_name @customer.last_name</a></td>
            <td>@customer.created_at.ToString("MMMM dd, yyyy")</td>
        </tr>
    }
</table>